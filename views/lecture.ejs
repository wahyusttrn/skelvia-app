<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skelvia</title>
</head>
<body>
    <h1>All our Lectures</h1>
    <% if (error) { %>
        <p style="color: tomato;"><%= error %></p>
    <% } %>
    <form action="/lectures" method="get">
        <input type="text" name="search" placeholder="search here...">
        <button value="SUBMIT" type="submit">Search</button>
    </form>
    <br>
    <table border="1">
        <thead>
        <tr>
            <th>No.</th>
            <th>Image</th>
            <th>Title</th>
            <th>Difficulty</th>
            <th>Price</th>
            <th>Reviews</th>
            <th>Action</th>
            <th>The Challenges</th>
        </tr>
        </thead>
        <tbody>
        <% data.forEach((e, i) => { %>
            <tr>
                <td><%= i + 1 %></td>
                <td><img src="<%= e.imageUrl %>" alt="<%= e.title %>" height="100"></td>
                <td><%= e.title %></td>
                <td><%= e.difficulty %></td>
                <td><%= formatMoney(e.price) %></td>
                <td><%= e.reviews %></td>
                <td>
                    <ul>
                        <% e.Challenges.forEach(ch => { %>
                            <li><%= ch.title %></li>
                        <% }) %>
                    </ul>
                </td>
                <td>
                    <a href="/lectures/<%= e.id %>/buy">Buy This</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</body>
</html>